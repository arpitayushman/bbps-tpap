<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Local development and emulator (HTTP) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">192.168.10.74</domain>
    </domain-config>
    
    <!-- AWS Production (HTTPS by default, add your domain) -->
    <!-- HTTPS is allowed by default, but you can specify certificate pinning here -->
    <!-- Example: -->
    <!--
    <domain-config>
        <domain includeSubdomains="true">your-api-domain.aws-region.amazonaws.com</domain>
        <domain includeSubdomains="true">your-alb-domain.elb.amazonaws.com</domain>
    </domain-config>
    -->
    
    <!-- AWS with HTTP (EC2 instance without HTTPS) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">ec2-3-109-54-89.ap-south-1.compute.amazonaws.com</domain>
    </domain-config>
</network-security-config>
